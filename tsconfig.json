    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // ðŸ‘‡ Aqui estÃ¡ a mÃ¡gica pro JSX
